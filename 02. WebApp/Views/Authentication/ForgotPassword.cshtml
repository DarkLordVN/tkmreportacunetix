@model TKM.WebApp.ForgetPassword
@using CaptchaMvc.HtmlHelpers

@{
    Layout = null;
    ViewBag.Title = "Quên mật khẩu";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/Assets/css/all.css" rel="stylesheet">
    <link href="/Assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Assets/css/mdb.min.css" rel="stylesheet" />
    <link href="/Assets/css/style-index.css" rel="stylesheet">
</head>

<body class="fixed-sn">
    <header>
        <!-- Full Page Intro -->

        <div class="view" style="background-image: url('/Assets/images/logo/bg-index.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
            <!-- Mask & flexbox options-->
            <div class="mask rgba-indigo-strong d-flex justify-content-center align-items-center">
                <!-- Content -->
                <div class="container">
                    <!--Grid row-->
                    <div class="row pt-lg-5 mt-lg-5">
                        <!--Grid column-->
                        <div class="d-none d-md-block col-md-6 mb-5 mt-md-0 mt-5 white-text text-center text-md-left wow fadeInLeft" data-wow-delay="0.3s">
                            <h1 class="display-4 font-weight-bold">TKM</h1>
                            <hr class="hr-light">
                            <h6 class="mb-3">
                                HỆ THỐNG QUẢN LÝ VĂN BẢN VÀ ĐIỀU HÀNH
                            </h6>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6 col-xl-5 mb-4 wow fadeInUp" data-wow-delay="0.5s">
                            <form action="/Authentication/ForgotPassword" id="login-form" class="smart-form client-form" method="POST">
                                <!--Form-->
                                <div class="card">

                                    <div class="card-body mx-4">


                                        <!--Header-->
                                        <div class="form-header f-bg2">
                                            <h6 class="text-uppercase text-dark mb-0"><i class="fal fa-sign-in mr-3"></i>@ViewBag.Title</h6>
                                        </div>

                                        <!--Body-->
                                        <div class="md-form">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control ", @id = "username-f", @placeholder = "Email" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "alert-danger" })
                                        </div>

                                        <div class="md-form mb-0 pb-0 mt-0">
                                            @Html.Captcha("Refresh", "Nhập mã captcha", 4)
                                            @Html.ValidationMessageFor(model => model.ErrMess, "", new { @class = "alert-danger" })
                                        </div>
                                        <div class="text-center mb-3 mt-3 row">
                                            <button type="submit" class="btn text-white f-bg1 btn-block btn-rounded z-depth-1a waves-effect waves-light col-5 ml-3">Gửi mật khẩu</button><div class="col-2"></div>
                                            <a href="/Authentication/Login" class="btn btn-secondary text-white btn-block btn-rounded z-depth-1a waves-effect waves-light col-5">Quay lại</a>
                                        </div>
                                        @ViewBag.Message
                                    </div>

                                    <!--Footer-->
                                    <div class="modal-footer mx-5 pt-3 mb-1">
                                        <p class="font-small w-100 mb-0 d-flex justify-content-center">Bạn có thắc mắc? Vui lòng gọi: <strong class="f-cl1 ml-2">(024).37684715</strong></p>
                                    </div>

                                </div>
                                <!--/.Form-->
                            </form>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->
        </form>
    </header>
