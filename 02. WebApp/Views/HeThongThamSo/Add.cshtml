@model TKM.BLL.HeThongThamSoViewModel

@{
    ViewBag.Title = "Thêm mới hệ thống tham số";
}
<div class="row">
    <div class="col right-content">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 fwb">
                        <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/DmChucVu/Index">Quản lý tham số hệ thống</a></li>
                        <li class="breadcrumb-item">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
        @if (TempData["AlertData"] != null)
            {
            <div class="alert @TempData["AlertType"]">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>@Html.Raw(@TempData["AlertData"])</strong>
                <a id="lblMessage"></a>
            </div>
        }
        <div class="row">
            <div class="col">
                <!-- Classic tabs -->
                <div class="classic-tabs tabs-f-cl mx-2">
                    <div class="tab-content py-0 card" id="myClassicTabContentShadow">
                        <div class="tab-pane fade active show pt20" id="vb-lt-den" role="tabpanel" aria-labelledby="profile-tab-classic-shadow">

                            @using (Html.BeginForm("Add", "HeThongThamSo", null, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group row">
                                    <label for="MaThamSo" class="col-sm-2 col-form-label">Mã tham số <span class="c-red-500">(*)</span></label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(model => model.MaThamSo, new { @class = "form-control ", @id = "MaThamSo" })
                                    </div>
                                    <label for="TenThamSo" class="col-sm-2 col-form-label">Tên tham số <span class="c-red-500">(*)</span></label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(model => model.TenThamSo, new { @class = "form-control ", @id = "TenThamSo" })
                                        @Html.ValidationMessageFor(model => model.TenThamSo, "", new { @class = "alert-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="MoTa" class="col-sm-2 col-form-label">Giá trị</label>
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(model => model.MoTa, new { @class = "form-control ", @id = "MoTa" })
                                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "alert-danger" })
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-check form-check-inline px-3 my-3">
                                            <input type="checkbox" class="form-check-input" id="TrangThai" name="TrangThai" value="true" checked>
                                            <label class="form-check-label" for="TrangThai">Còn sử dụng</label>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="form-group row">
                                        <div class="col-sm-6">
                                            <div class="md-form">
                                                @Html.TextBoxFor(model => model.TenChucVu, new { @class = "form-control ", @id = "TenChucVu" })
                                                @Html.ValidationMessageFor(model => model.TenChucVu, "", new { @class = "alert-danger" })
                                                <label for="TenChucVu">Tên chức vụ <span class="c-red-500">(*)</span></label>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="md-form">
                                                @Html.TextBoxFor(model => model.KyHieu, new { @class = "form-control ", @id = "KyHieu" })
                                                @Html.ValidationMessageFor(model => model.KyHieu, "", new { @class = "alert-danger" })
                                                <label for="KyHieu">Ký hiệu</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <div class="md-form">
                                                @Html.TextBoxFor(model => model.ThuTus, new { @class = "form-control ", @id = "ThuTu", @Type = "number" })
                                                @Html.ValidationMessageFor(model => model.ThuTus, "", new { @class = "alert-danger" })
                                                <label for="ThuTu">Thứ tự <span class="c-red-500">(*)</span></label>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="md-form">
                                                <div class="form-check form-check-inline px-3 my-3">
                                                    <input type="checkbox" class="form-check-input" id="TrangThai" name="TrangThai" value="true" checked>
                                                    <label class="form-check-label" for="TrangThai">Còn sử dụng</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                                <div class="form-group row">
                                    <div class="text-right col-sm-12">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                        <a class="btn cur-p btn-light" href="/HeThongThamSo/Index">Hủy bỏ</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

