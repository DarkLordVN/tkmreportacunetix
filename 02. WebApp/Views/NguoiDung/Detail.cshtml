@using TKM.BLL
@model NguoiDungViewModel
@{
    Layout = null;
}

<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Tên đăng nhập: </label>
        </div>
        <div class="col-md-9">
            @(Model!=null ? Model.TenDangNhap:"")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Họ và tên: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Model.HoVaTen : "")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Ảnh đại diện: </label>
        </div>
        <div class="col-md-9">
            <img src="@(Model.AnhDaiDien != null ? Model.AnhDaiDien : "/Assets/images/logo/no-image.jpg")" alt="Alternate Text" width="50%"/>

        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Ngày sinh: </label>
        </div>
        <div class="col-md-9">
            @(Model != null && Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Giới tính: </label>
        </div>
        <div class="col-md-9">
            @(Model.GioiTinh == true ? "Nam" : "Nữ")
        </div>
    </div>
</div>

