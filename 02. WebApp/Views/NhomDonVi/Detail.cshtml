@using TKM.BLL
@model NhomDonViViewModel
@{
    Layout = null;
}

<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Tên nhóm đơn vị: </label>
        </div>
        <div class="col-md-9">
            @(Model!=null ? Model.TenNhom:"")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Danh sách đơn vị: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Html.Raw(Model.DonViTrongNhom) : Html.Raw(""))
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Trạng thái: </label>
        </div>
        <div class="col-md-9">
            @Html.Raw(Model != null && Model.TrangThai == true ? "<span class='badge badge-success'>Có Sử dụng</span>" : "<span class='badge badge-danger'>Không sử dụng</span>")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    </div>

</div>