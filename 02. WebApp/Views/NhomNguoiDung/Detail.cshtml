@using TKM.BLL
@model NhomNguoiDungViewModel
@{
    Layout = null;
}

<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Tên nhóm người dùng: </label>
        </div>
        <div class="col-md-9">
            <pre class="ffm-rob">@(Model!=null ? Model.TenNhom:"")</pre>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Danh sách người dùng: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Html.Raw(Model.NguoiDungTrongNhom) : Html.Raw(""))
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Phạm vi sử dụng: </label>
        </div>
        <div class="col-md-9">
            @Html.Raw(Model != null && Model.PhamViSuDung == true ? "<span class='badge badge-primary'>Nhóm dùng chung</span>" : "<span class='badge badge-dark'>Nhóm cá nhân</span>")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Trạng thái: </label>
        </div>
        <div class="col-md-9">
            @Html.Raw(Model != null && Model.TrangThai == true ? "<span class='badge badge-success'>Có Sử dụng</span>" : "<span class='badge badge-danger'>Không sử dụng</span>")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    </div>

</div>