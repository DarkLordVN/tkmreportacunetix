@using TKM.BLL
@model NhomQuyenViewModel
@{
    Layout = null;
}

<div class="form-group">
        <div class="row">
            <div class="col-md-3 text-right">
                <label class="fwb">Tên nhóm: </label>
            </div>
            <div class="col-md-9">
                @(Model!=null ? Model.TenNhom:"")
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-3 text-right">
                <label class="fwb">Ký hiệu: </label>
            </div>
            <div class="col-md-9">
                @(Model != null ? Model.KyHieu : "")
            </div>
        </div>
    </div>

 
    <div class="form-group">
        <div class="row">
            <div class="col-md-3 text-right">
                <label class="fwb">Thứ tự: </label>
            </div>
            <div class="col-md-9">
                @Model.ThuTu
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-3 text-right">
                <label class="fwb">Trạng thái: </label>
            </div>
            <div class="col-md-9">
                @Html.Raw(Model != null && Model.TrangThai == true ? "<span class='badge badge-success'>có sử dụng</span>" : "<span class='badge badge-danger'>không sử dụng</span>")
            </div>
        </div>
    </div>

<div class="form-group">
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    </div>

</div>