@using TKM.BLL
@model SoVanBanDenViewModel
@{
    Layout = null;
}

<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Tên: </label>
        </div>
        <div class="col-md-9">
            @(Model!=null ? Model.Ten:"")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Đơn vị quản lý: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Model.TenDonVi : "")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Số bắt đầu trong sổ: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Model.SoBatDauTrongSo.ToString() : "")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Năm vào sổ: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? Model.NamVaoSo.ToString() : "")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Ngày bắt đầu: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? TKM.Utils.ConvertDateTime.ConvertDateToString(Model.NgayBatDau) : null)
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Ngày kết thúc: </label>
        </div>
        <div class="col-md-9">
            @(Model != null ? TKM.Utils.ConvertDateTime.ConvertDateToString(Model.NgayKetThuc) : null)
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-3 text-right">
            <label class="fwb">Trạng thái: </label>
        </div>
        <div class="col-md-9">
            @Html.Raw(Model != null && Model.TrangThai == true ? "<span class='badge badge-success'>Có Sử dụng</span>" : "<span class='badge badge-danger'>Không sử dụng</span>")
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
        </div>
    </div>

</div>