@using PagedList.Mvc;
@model TKM.BLL.UyQuyenListView
@{
    var pagesize = Model.PageSize;
    var totalPageNumber = Model.TotalItem / pagesize;
    if (Model.TotalItem % pagesize != 0)
    {
        totalPageNumber = totalPageNumber + 1;
    }
}

<input type="hidden" id="txtTotal" value="@Model.TotalItem" />
<input type="hidden" id="txtPageNumber" value="@Model.PageNumber" />
@if (Model != null && Model.LstUyQuyen != null && Model.LstUyQuyen.Count() > 0)
{
    var index = Model.PageSize.Value * (Model.PageNumber.Value - 1);
    foreach (var item in Model.LstUyQuyen)
    {
        index++;
        <tr>
            <td align="center">@index</td>
            <td class="tal">
                <a href="javascript://" title="Xem chi tiết" onclick="loadfrmView(@item.ID)" class="h-tdu text-primary"><div class="ffm-rob text-primary dib whitespace-pre">@item.NguoiUyQuyen</div></a>
            </td>
            <td class="tal">@item.NguoiDung</td>
            <td style="text-align:center">@item.TuNgay.Value.ToString("dd/MM/yyyy")</td>
            <td style="text-align:center">@item.DenNgay.Value.ToString("dd/MM/yyyy")</td>
            <td>
                @(item.TrangThaiUQ == 0 ? "Khởi tạo" : (item.TrangThaiUQ == 1 ? "Đã gửi ủy quyền" : "Đã dừng ủy quyền"))
            </td>
            <td style="width:130px">
                @if (SessionInfo.CurrentUser.ID == item.NguoiTaoID)
                {
                    if (item.TrangThaiUQ == 0)
                    {
                        <a title="Gửi ủy quyền" onclick="onChangeStatusSend(@item.ID)" class="btn-floating btn-sm btn-success"><i class="far fa-share"></i></a>
                    }
                    else { }

                    if (item.TrangThaiUQ == 1 && item.DenNgay > DateTime.Now)
                    {
                        <a title="Dừng ủy quyền" onclick="onChangeStatusStop(@item.ID)" class="btn-floating btn-sm btn-danger"><i class="fas fa-ban"></i></a>
                    }
                    else { }
                }
                else { }
            </td>
            <td style="width:130px">
                @if (SessionInfo.CurrentUser.ID == item.NguoiTaoID)
                {
                    if (item.TrangThaiUQ == 0 || item.TrangThaiUQ == 2)
                    {
                        <a href="javascript://" onclick="location.href='@Url.Action("Update", "UyQuyen", new { id = item.ID })'" class="btn-floating btn-sm btn-success mx-1" data-toggle="tooltip" title="Chỉnh sửa" data-original-title="Chỉnh sửa"><i class="fal fa-edit"></i></a>
                        <a href="javascript://" onclick="onDelete(@item.ID);" class="btn-floating btn-sm btn-danger mx-1" data-toggle="tooltip" data-original-title="Xóa" title="Xóa"><i class="fal fa-times"></i></a>
                    }
                    else { }
                }                
            </td>
            <td>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkbox" value="@item.ID" id="chk'@item.ID'">
                    <label class="form-check-label" for="chk'@item.ID'"></label>
                </div>
            </td>
        </tr>
    }

}
@if (Model != null && Model.LstUyQuyen == null || Model.LstUyQuyen.Count == 0)
{
    <tr>
        <td colspan="9" class="text-center c-red-500"><b>Dữ liệu không tồn tại</b></td>
    </tr>
}
else
{
    <tr class="pagination-ys" align="left">
        <td colspan="10">
            <div class="row col-md-12 p-0 m-0">
                <div class="col-md-6">
                    @Html.PagedListPager((PagedList.IPagedList<int>)ViewBag.PagedList, pnum => Url.Action("IndexDetail", "UyQuyen", new
               {
                   TuKhoa = Model.TuKhoa,
                   NguoiDungID = Model.NguoiDungID,
                   TuNgay = Model.TuNgayStr,
                   DenNgay = Model.DenNgayStr,
                   ColumnName = Model.ColumnName, OrderBy = Model.OrderBy, PageNumber = pnum,
                   PageSize = Model.PageSize,

               }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.MinimalWithPageCountText, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "tbKetQua", OnComplete = "loadPaging();" }))
                </div>
                <div class="col-md-6 text-right pt-2">
                    Hiển thị: @Html.DropDownListFor(m => m.PageSize, new List<SelectListItem>() {
                        new SelectListItem() { Value = "10", Text = "10"},
                         new SelectListItem() { Value = "20", Text = "20", Selected=true},
                         new SelectListItem() { Value = "50", Text = "50"},
                         new SelectListItem() { Value = "100", Text = "100"}
                     }, new { @id = "changePageSize", @class = "custext w-60", @onchange = "loadData('', '');" }) kết quả trên 1 trang / @Model.TotalItem bản ghi
                </div>
            </div>
        </td>
    </tr>
}

