<script>
    $('#NguoiNhanID').on('change', function () {
        var value = $(this).val();
        if (value == '' || value == '0') {
            toastr.error("Bạn chưa chọn cán bộ xử lý chính!");
        } else {
            $.ajax({
                type: "GET",
                url: '/VanBanDen/ReloadListCanBoPhoiHopXuLy',
                data: { id: value,donviid : @SessionInfo.CurrentUser.DonViID,lstcanbophid : ','+$('#ListCanBoPhoiHopXuLyID').val().toString()+','},
                dataType: "html",
                success: function (res) {
                    $('#reloadListCanBoPhoiHopXuLy').html(res);
                },
                error: function (response) {
                    toastr.error("Đã có lỗi xảy ra");
                }
            });
        }

    })
