<div class="form-group row">
    <label for="NguoiNhanID" class="col-sm-2 col-form-label">Cán bộ xử lý chính <span class="c-red-500">(*)</span></label>
    <div class="col-sm-4">
        <select class="mdb-select md-form md-outline colorful-select dropdown-primary m-0 p-0" id="NguoiNhanID" name="NguoiNhanID" searchable="Nhập từ khóa.." @(objVanBanDen.LanhDaoButPheDonViID > 0 ? "disabled='true'" : "")>
            <option value="">-- Chọn cán bộ --</option>
            @if (lstNguoiDung != null && lstNguoiDung.Count > 0)
            {
                foreach (var item in lstNguoiDung)
                {
                    <option value="@item.ID" @(objVanBanDen.LanhDaoButPheDonViID > 0 && objVanBanDen.NguoiNhanID == item.ID ? "selected" : "")>@item.ChucVuVaTen</option>
                }
            }
        </select>

    </div>
    <label for="ListCanBoPhoiHopXuLyID" class="col-sm-2 col-form-label">Cán bộ phối hợp xử lý</label>
    <div class="col-sm-4">
        <div id="reloadListCanBoPhoiHopXuLy">
            <select class="mdb-select md-form md-outline colorful-select dropdown-primary m-0 p-0" name="ListCanBoPhoiHopXuLyID" id="ListCanBoPhoiHopXuLyID" multiple searchable="Chọn cán bộ...">
                <option value="" disabled selected>-- Chọn cán bộ --</option>
                @if (lstNguoiDung != null && lstNguoiDung.Count > 0)
            {
                foreach (var item in lstNguoiDung.Where(x => x.ID != objVanBanDen.NguoiNhanID))
                {
                        <option value="@item.ID" @(objVanBanDen != null && !string.IsNullOrEmpty(objVanBanDen.ListCanBoPhoiHopXuLyID) && objVanBanDen.ListCanBoPhoiHopXuLyID.Contains("," + item.ID + ",") ? "selected" : "")>@item.ChucVuVaTen</option>
                    }
                }
            </select>
            </div>
        </div>
</div>
