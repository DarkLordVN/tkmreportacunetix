@using TKM.BLL
@model VanBanDenViewModel
@{
    Layout = null;
}
<script src="~/Scripts/jquery.validate.min.js"></script>
@using (Ajax.BeginForm("TraLai", "VanBanDen", null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "onTraLaiSuccess"
}, new { @id = "fFormTL" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="LyDoTraLai">Lý do trả lại <span class="c-red-500">(*)</span></label>
            <div class="col-sm-10">
                @Html.TextArea("LyDoTraLai", null, new { @class = "form-control rounded-0", @id = "LyDoTraLai", @placeholder = "Lý do trả lại", @rows = "3" })
            </div>
</div>

    <div class="form-group row">
        <div class="text-right col-sm-12">
            <button type="submit" class="btn btn-primary">Gửi</button>
            <button type="button" class="btn btn-light" data-dismiss="modal">Đóng</button>
        </div>
    </div>


}
<script>
    $(document).ready(function () {
    })
    $("#fFormTL").validate({
        rules: {
            LyDoTraLai: {
                required: true,
            }
        },
        messages: {
            LyDoTraLai: {
                required: "Vui lòng nhập lý do trả lại!",
            }
        }
    });
    $('#fFormTL').on('submit', function () {
        $("#fFormTL").valid();
    })
</script>