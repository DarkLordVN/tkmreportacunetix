@using TKM.BLL
@{ 
    Layout = null;
    var lstSoVanBanDi = (List<SoVanBanDiViewModel>)ViewBag.lstSoVanBanDi;
    var DonViID = (int)ViewBag.DonViID;
    var idNew = (int)ViewBag.idNew;
    var soDi = (int)ViewBag.soDi;
}
@Html.DropDownList("SoVanBanDiID", new SelectList(lstSoVanBanDi.Where(g => g.DonViID == DonViID), "ID", "Ten", idNew),"-- Chọn sổ văn bản --", new { @class = "mdb-select mdb-select-cusvb md-form md-outline colorful-select dropdown-primary m-0 p-0", @id = "SoVanBanDiID", @searchable = "Nhập từ khóa.." })
<script>
    $('.mdb-select-cusvb').materialSelect();
    $('#SoDi').val(@soDi);
    </script>