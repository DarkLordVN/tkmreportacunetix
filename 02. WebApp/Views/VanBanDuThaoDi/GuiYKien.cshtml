@model TKM.BLL.VanBanDuThaoDiGopYViewModel

@{
    ViewBag.Title = "Gửi ý kiến";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col right-content">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 fwb">
                        <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="/VanBanDuThaoDi">Danh sách văn bản dự thảo</a></li>
                        <li class="breadcrumb-item">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
        @if (TempData["AlertData"] != null)
        {
            <div class="alert @TempData["AlertType"]">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>@Html.Raw(@TempData["AlertData"])</strong>
                <a id="lblMessage"></a>
            </div>
        }
        <div class="row">
            <div class="col">
                <!-- Classic tabs -->
                <div class="classic-tabs tabs-f-cl mx-2">
                    <div class="tab-content py-0 card" id="myClassicTabContentShadow">
                        <div class="tab-pane fade active show pt20 row col-sm-12" id="vb-lt-den" role="tabpanel" aria-labelledby="profile-tab-classic-shadow">
                            @using (Html.BeginForm("GuiYKien", "VanBanDuThaoDi", null, FormMethod.Post, new { @id = "fFormVanBan", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.File, new { @id = "ModelFileVanBan" })
                                @Html.HiddenFor(m => m.VanBanId)
                                <div class="form-group row">
                                    <div class="col-sm-8">
                                        <div class="form-group row">
                                            <h6 class="pt-3 pl-3 font-weight-bold">Đưa ý kiến cho văn bản dự thảo</h6>
                                            <div class="col-sm-12">
                                                <label class="active" for="NoiDungYKien">
                                                    Nội dung góp ý <span class="c-red-500">(*)</span>
                                                </label>
                                                @Html.TextAreaFor(model => model.NoiDungYKien, new { @class = "form-control rounded-0", @id = "NoiDungYKien", @placeholder = "Nội dung góp ý...", @rows = "3", @maxlength="2000" })
                                            </div>
                                            @*<div class="col-sm-12">
                                                <div class="md-form">
                                                    @Html.TextAreaFor(model => model.NoiDungGopY, new { @class = "md-textarea form-control", @id = "NoiDungGopY", @rows = "3" })
                                                    @Html.ValidationMessageFor(model => model.NoiDungGopY, "", new { @class = "alert-danger" })
                                                    <label for="TrichYeu">Nội dung góp ý <span class="c-red-500">(*)</span></label>
                                                </div>
                                            </div>*@
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-3">
                                                File đính kèm
                                            </div>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.File, new { @id = "txtFile", @type = "file" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <div class="md-form">
                                                    <div class="form-check form-check-inline px-3 my-3">
                                                        <input type="checkbox" class="form-check-input" id="SendSMS" name="SendSMS">
                                                        <label class="form-check-label" for="SendSMS">Gửi SMS</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="md-form">
                                                    <div class="form-check form-check-inline px-3 my-3">
                                                        <input type="checkbox" class="form-check-input" id="SendEmail" name="SendEmail">
                                                        <label class="form-check-label color-black" for="SendEmail">Gửi Email</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="text-right col-sm-12">
                                                <button type="submit" class="btn btn-primary" id="btn-luu">Lưu và Gửi</button>
                                                <a class="btn btn-primary" href="/VanBanDuThaoDi">Đóng</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="treeview w-20 border">
                                            <h6 class="pt-3 pl-3 font-weight-bold">Chọn người nhận</h6>
                                            <hr>
                                            @Html.Raw(Model.LstNguoiDungHtml)
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>